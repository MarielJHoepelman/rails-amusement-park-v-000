<%= form_for :user, url: '/users' do |f| %>
  Name: <%= f.text_field :name %><br/>
  Password: <%= f.password_field :password %><br/>
  Nausea: <%= f.number_field :nausea %><br/>
  Happiness: <%= f.number_field :happiness %><br/>
  Tickets: <%= f.number_field :tickets %><br/>
  Height: <%= f.number_field :height %><br/>

  <%= check_box_tag(:user_admin) %>
  <%= label_tag(:user_admin, "I am admin") %>

<%= f.submit "Create User" %>
<% end %>
